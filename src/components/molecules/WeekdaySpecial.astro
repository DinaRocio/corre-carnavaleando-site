---
import site from "../../content/site.json";
const { id, name, description } = Astro.props;

const weekdaysMap = {
  1: "Monday",
  2: "Tuesday",
  3: "Wednesday",
  4: "Thursday",
  5: "Friday",
  6: "Saturday",
  7: "Sunday",
};
---

<div class="border-t var(--color-divider) pt-4 pb-4">
  <div class={`flex flex-col ${description ? "gap-4" : "gap-0"}`}>
    <div class="flex md:flex-row flex-col items-start justify-start gap-2">
      <h3 class="body-16-semibold">
        {weekdaysMap[id as keyof typeof weekdaysMap]}
      </h3>
      <p class="body-16">{name}</p>
    </div>
    <p>{description}</p>
  </div>
</div>
