---
import site from "../../content/site.json";
import { parseHighlightedText } from "../../helpers/parseHighlightedText";
---

<section
  id="quote-banner"
  class="w-full h-auto md:p-22 p-8 mx-auto relative overflow-hidden bg-(--color-header-background)"
>
  <div
    class="w-full h-full flex flex-col items-center justify-center text-center gap-5"
  >
    <p class="body-14">{site.quoteBanner.eyebrow}</p>
    <h2
      class="heading-3 md:w-7/9 w-full"
      set:html={parseHighlightedText(site.quoteBanner.quote)}
    />
  </div>
</section>
