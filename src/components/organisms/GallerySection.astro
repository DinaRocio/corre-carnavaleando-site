---
import site from "../../content/site.json";

const totalItems = site.gallery.items.length;
---

<section
  id="gallery"
  class="w-full px-30 py-20 bg-(--color-gallery-background)"
>
  <div class="container-max mx-auto">
    <h2 class="heading-2 text-(--color-text) text-center mb-12">
      {site.gallery.title.toUpperCase()}
    </h2>
    
    <div
      class="relative px-12"
      x-data="{
        currentIndex: 0,
        totalItems: ${totalItems},
        itemsPerView: 3,
        get maxIndex() {
          return this.totalItems - this.itemsPerView;
        },
        prev() {
          if (this.currentIndex > 0) {
            this.currentIndex--;
          }
        },
        next() {
          if (this.currentIndex < this.maxIndex) {
            this.currentIndex++;
          }
        }
      }"
    >
      <!-- Gallery Container -->
      <div class="overflow-hidden">
        <div
          class="flex transition-transform duration-500 ease-in-out gap-4"
          :style="'transform: translateX(-' + (currentIndex * (100 / 3 + 4/3)) + '%);'"
        >
          {
            site.gallery.items.map((item) => (
              <div class="shrink-0 w-1/3">
                <img
                  src={item.src}
                  alt={item.alt}
                  class="w-full h-[286px] object-cover rounded-lg"
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button
        @click="prev"
        :class="currentIndex === 0 ? 'opacity-50 cursor-not-allowed' : 'hover:bg-(--color-primary)'"
        class="absolute left-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-4 transition-all duration-200 shadow-lg z-10"
        aria-label="Previous images"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </button>

      <button
        @click="next"
        :class="currentIndex >= maxIndex ? 'opacity-50 cursor-not-allowed' : 'hover:bg-(--color-primary)'"
        class="absolute right-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-4 transition-all duration-200 shadow-lg z-10"
        aria-label="Next images"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </button>

      <!-- Indicators -->
      <div class="flex justify-center gap-2 mt-8">
        {
          Array.from({ length: totalItems - 2 }).map((_, index) => (
            <button
              @click={`currentIndex = ${index}`}
              :class={`currentIndex === ${index} ? 'bg-(--color-primary) scale-125' : 'bg-(--color-border)'`}
              class="w-3 h-3 rounded-full transition-all duration-200"
              aria-label={`Go to slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
