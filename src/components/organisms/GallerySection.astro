---
import site from "../../content/site.json";

const { title, description, items } = site.gallery;
---

<section
  id="gallery"
  class="w-full px-4 py-12 md:px-8 md:py-24 lg:py-28 bg-(--color-gallery-background)"
>
  <div class="container-max mx-auto">
    <!-- Header -->
    <div class="flex flex-col items-center gap-4 mb-8 md:mb-12">
      <h2 class="heading-2 text-(--color-text) text-center">
        {title.toUpperCase()}
      </h2>
      <p class="body-16 text-(--color-text) text-center max-w-2xl">
        {description}
      </p>
    </div>

    <!-- Carousel -->
    <div class="relative">
      <!-- Gallery Container with Scroll Snap -->
      <div
        id="gallery-scroll"
        class="flex overflow-x-auto snap-x snap-mandatory gap-2 md:gap-4 scrollbar-hide scroll-smooth px-0 md:px-12"
      >
        {
          items.map((item, index) => (
            <div
              id={`slide-${index}`}
              class="shrink-0 snap-center w-full md:w-1/3"
            >
              <img
                src={item.src}
                alt={item.alt}
                loading={index < 3 ? "eager" : "lazy"}
                class="w-full h-[250px] md:h-[400px] object-cover rounded-lg"
              />
            </div>
          ))
        }
      </div>

      <!-- Navigation Buttons -->
      <button
        type="button"
        id="prev-btn"
        class="cursor-pointer hidden md:flex absolute left-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-3 md:p-4 transition-all duration-200 shadow-lg z-20 hover:bg-(--color-primary) hover:scale-110 items-center justify-center"
        aria-label="Previous image"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 md:w-6 md:h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <button
        type="button"
        id="next-btn"
        class="cursor-pointer hidden md:flex absolute right-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-3 md:p-4 transition-all duration-200 shadow-lg z-20 hover:bg-(--color-primary) hover:scale-110 items-center justify-center"
        aria-label="Next image"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 md:w-6 md:h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </button>

      <!-- Indicators -->
      <div class="flex justify-center gap-2 mt-6 md:mt-8">
        {
          items.map((_, index) => (
            <a
              href={`#slide-${index}`}
              class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-(--color-border) hover:bg-(--color-primary) transition-all duration-200"
              aria-label={`Go to slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("gallery-scroll");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    if (container && prevBtn && nextBtn) {
      const scrollAmount = container.offsetWidth / 3; // Ancho de una imagen en desktop

      prevBtn.addEventListener("click", () => {
        container.scrollBy({ left: -scrollAmount, behavior: "smooth" });
      });

      nextBtn.addEventListener("click", () => {
        container.scrollBy({ left: scrollAmount, behavior: "smooth" });
      });
    }
  });
</script>

<style>
  /* Ocultar scrollbar pero mantener funcionalidad */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
