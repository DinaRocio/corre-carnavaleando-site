---
import site from "../../content/site.json";

const { title, description, items } = site.gallery;
const totalItems = items.length;

const ITEMS_PER_VIEW_DESKTOP = 3;
const ITEMS_PER_VIEW_MOBILE = 1;
---

<section
  id="gallery"
  class="w-full px-4 py-12 md:px-8 md:py-24 lg:py-28 bg-(--color-gallery-background)"
>
  <div class="container-max mx-auto">
    <!-- Header -->
    <div class="flex flex-col items-center gap-4 mb-8 md:mb-12">
      <h2 class="heading-2 text-(--color-text) text-center">
        {title.toUpperCase()}
      </h2>
      <p class="body-16 text-(--color-text) text-center max-w-2xl">
        {description}
      </p>
    </div>

    <!-- Carousel -->
    <div
      class="relative px-0 md:px-12"
      x-data="{
        currentIndex: 0,
        totalItems: ${totalItems},
        itemsPerView: ${ITEMS_PER_VIEW_MOBILE},
        init() {
          this.setItemsPerView();
          window.addEventListener('resize', () => this.setItemsPerView());
        },
        setItemsPerView() {
          this.itemsPerView = window.innerWidth >= 768
            ? ${ITEMS_PER_VIEW_DESKTOP}
            : ${ITEMS_PER_VIEW_MOBILE};

          // Ajusta index si cambió el viewport y te quedaste “pasada”
          if (this.currentIndex > this.maxIndex) this.currentIndex = this.maxIndex;
        },
        get maxIndex() {
          return Math.max(0, this.totalItems - this.itemsPerView);
        },
        get isAtStart() {
          return this.currentIndex === 0;
        },
        get isAtEnd() {
          return this.currentIndex >= this.maxIndex;
        },
        prev() {
          this.currentIndex = Math.max(0, this.currentIndex - 1);
        },
        next() {
          this.currentIndex = Math.min(this.maxIndex, this.currentIndex + 1);
        },
        goToSlide(index) {
          this.currentIndex = Math.max(0, Math.min(this.maxIndex, index));
        }
      }"
      x-init="init()"
    >
      <!-- Gallery Container -->
      <div class="overflow-hidden rounded-lg">
        <div
          class="flex transition-transform duration-500 ease-in-out gap-2 md:gap-4"
          :style="`transform: translateX(-${(100 / itemsPerView) * currentIndex}%);`"
        >
          {
            items.map((item, index) => (
              <div class="shrink-0 w-full md:w-1/3">
                <img
                  src={item.src}
                  alt={item.alt}
                  loading={index < 3 ? "eager" : "lazy"}
                  class="w-full h-[200px] md:h-[286px] object-cover rounded-lg"
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button
        type="button"
        @click="prev()"
        :disabled="isAtStart"
        :class="isAtStart ? 'opacity-30 cursor-not-allowed' : 'hover:bg-(--color-primary) hover:scale-110'"
        class="absolute left-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-3 md:p-4 transition-all duration-200 shadow-lg z-10"
        aria-label="Previous images"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 md:w-6 md:h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <button
        type="button"
        @click="next()"
        :disabled="isAtEnd"
        :class="isAtEnd ? 'opacity-30 cursor-not-allowed' : 'hover:bg-(--color-primary) hover:scale-110'"
        class="absolute right-0 top-1/2 -translate-y-1/2 bg-(--color-button-primary) text-(--color-text-primary) rounded-full p-3 md:p-4 transition-all duration-200 shadow-lg z-10"
        aria-label="Next images"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 md:w-6 md:h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </button>

      <!-- Indicators (reactivos) -->
      <div class="flex justify-center gap-2 mt-6 md:mt-8">
        <template x-for="i in (maxIndex + 1)" :key="i">
          <button
            type="button"
            @click="goToSlide(i - 1)"
            :class="currentIndex === (i - 1) ? 'bg-(--color-primary) scale-125' : 'bg-(--color-border) hover:bg-(--color-text-secondary)'"
            class="w-2 h-2 md:w-3 md:h-3 rounded-full transition-all duration-200"
            :aria-label="`Go to slide ${i}`"></button>
        </template>
      </div>
    </div>
  </div>
</section>
