---
import site from "../../content/site.json";
---

<section class="w-full bg-(--color-background) py-12 md:py-16 px-4 md:px-8">
  <div class="flex md:gap-14 gap-10">
    <div>
      <h2 class="heading-2 text-(--color-text) text-center">
        {site.about.eyebrow.toUpperCase()}
      </h2>
      <h2 class="body-18-semibold text-(--color-text)">
        {site.about.heading.toUpperCase()}
      </h2>

      <p class="body-18 text-(--color-text)">
        {site.about.quote}
      </p>
    </div>
    <iframe
      class="w-full aspect-video"
      src="https://www.youtube.com/embed/d8hn7ajUytU?mute=1&loop=1&playlist=d8hn7ajUytU"
      title="YouTube video player"
    width="560"
      height="315"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
  </div>
</section>
