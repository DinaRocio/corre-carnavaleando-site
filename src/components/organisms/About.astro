---
import site from "../../content/site.json";

const { eyebrow, heading, paragraphs } = site.about;
---

<section class="w-full bg-(--color-background) py-12 md:py-16 px-4 md:px-8">
  <div class="container-max mx-auto">
    <div class="flex flex-col md:flex-row gap-8 md:gap-14 items-start">
      <!-- Text Content -->
      <div class="w-full md:w-1/2 flex flex-col gap-4 md:gap-6">
        <h2 class="heading-2 text-(--color-text) text-center md:text-left">
          {eyebrow.toUpperCase()}
        </h2>
        <h3
          class="body-18-semibold text-(--color-text) text-center md:text-left"
        >
          {heading.toUpperCase()}
        </h3>
        <div class="flex flex-col gap-4 text-(--color-text)">
          {
            paragraphs.map((paragraph) => (
              <p class="body-16 md:body-18 leading-relaxed">{paragraph}</p>
            ))
          }
        </div>
      </div>

      <!-- Video -->
      <div class="w-full md:w-1/2">
        <iframe
          class="w-full aspect-video rounded-lg shadow-lg"
          src="https://www.youtube.com/embed/d8hn7ajUytU?mute=1&loop=1&playlist=d8hn7ajUytU"
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </div>
  </div>
</section>
